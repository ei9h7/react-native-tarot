{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "module": "esnext",
    "noEmit": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "sourceMap": true,
    "strictNullChecks": true,
    "paths": {
      "@tarot-vii/*": [
        "packages/*"
      ]
    }
  },
  "references": [
    {
      "path": "packages/app"
    },
    {
      "path": "packages/expo"
    },
    {
      "path": "packages/next"
    },
    {
      "path": "packages/ui"
    }
  ],
  "exclude": [
    "node_modules",
    "dist",
    "*.d.ts"
  ]
}